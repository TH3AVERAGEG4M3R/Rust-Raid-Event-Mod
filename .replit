[[workflows.workflow]]
name = "Rust Oxide Mod"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet new console -n PlayerStatsLeaderboard && cd PlayerStatsLeaderboard && cp ../PlayerStatsLeaderboard.cs Program.cs && dotnet add package Newtonsoft.Json && dotnet run"

[[workflows.workflow]]
name = "rust_oxide_test"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "echo \"Testing Rust Oxide Raid Event Mod Structure...\" && echo \"Checking main plugin file...\" && ls -la RaidEventMod.cs && echo \"Checking config structure...\" && cat config/RaidEventConfig.json && echo \"Checking language file...\" && cat lang/en.json && echo \"Plugin structure is valid! This is a Rust Oxide plugin for raid events.\""
